generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model TimeEntry {
  id          Int      @id @default(autoincrement())
  date        DateTime
  project     Project
  hours       Float
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Project {
  VISO_INTERNAL
  CLIENT_A
  CLIENT_B
  PERSONAL_DEVELOPMENT
  CLIENT_C
}

